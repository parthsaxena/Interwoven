//currentOptionSelected holds current option selected
//meetDevelopersOption is meet the developers
//startOption is start game

if (key_up) {
    if (currentOptionSelected == meetDevelopersOption) {
        // User is currently on "Meet Developers" button, move to "Start"
        
        currentOptionSelected = startOption;
        y-=160;
        
    } else if(currentOptionSelected == startOption) {
        // User is currently on "Start" button, move to "Meet The Developers"
    
        currentOptionSelected = meetDevelopersOption;
        y+=160;
        
    }
}

if (key_down) {
    if (currentOptionSelected == meetDevelopersOption) {
        // User is currently on "Meet Developers" button, move to "Start"
        
        currentOptionSelected = startOption;
        y-=160;
        
    } else if(currentOptionSelected == startOption) {
        // User is currently on "Start" button, move to "Meet The Developers"
    
        currentOptionSelected = meetDevelopersOption;
        y+=160;
        
    }
}

if (key_enter) {
    if (currentOptionSelected == startOption) {
        room_goto(rm_level_one);
    } else if (currentOptionSelected == meetDevelopersOption) {
        room_goto(rm_developers);
    }
}   







